<% title "Trees" %>

<%= form_tag search_trees_path, :method => :get, :remote => true  do %>
  <p>
    <%= text_field_tag :q, params[:q]%>
    <%= submit_tag "Search", :name => nil %>
    <%= submit_tag "Clear", :name => "clear" %>
  </p>
<% end %>

<div id="tree_results">

	<div class="header">

  </div>
  <div id="trees">  
    <%= render @trees %>
	</div>


<%= paginate @trees %>

</div>

<p><%= link_to "New Tree", new_tree_path %></p>
